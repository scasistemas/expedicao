<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >
    <TextView
        android:id="@+id/numped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="Pedido:"
        android:textColor="#ff1f1f20"

        />

    <TextView
        android:id="@+id/nomeped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Medium Text"
        android:layout_toRightOf="@+id/numped"
        android:textColor="#ff1d1d1e"
        />


    <TextView
        android:id="@+id/nomecliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text=" data"
        android:textColor="#ff0c0c0c"
        android:textSize="12dp"
        android:textStyle="italic"
        android:layout_below="@+id/nomeped"
        />


</RelativeLayout>
